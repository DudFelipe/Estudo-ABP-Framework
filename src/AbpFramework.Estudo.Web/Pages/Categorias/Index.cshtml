@page
@using AbpFramework.Estudo.Localization
@using AbpFramework.Estudo.Web.Menus
@using AbpFramework.Estudo.Web.Pages
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model AbpFramework.Estudo.Web.Pages.Categorias.IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<EstudoResource> L
@{
    PageLayout.Content.Title = "Categorias";
    PageLayout.Content.BreadCrumb.Add("Categorias");
    PageLayout.Content.MenuItemName = EstudoMenus.Categoria;
}

@section scripts
{
    <abp-script src="/Pages/Categorias/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Categorias/index.css" />
}

<abp-card>
    <abp-card-body>
        <abp-row class="mb-3">
            <abp-column size-md ="_6">
                <a abp-collapse-id="CategoriaCollapse" class="text-secondary">Filtro</a>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewCategoriaButton"
                            text="Inserir Categoria"
                            icon="plus"
                            class="btn-sm"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
        <abp-dynamic-form abp-model="CategoriaFilter" id="CategoriaFilter" required-symbols="false" column-size="_6">
            <abp-collapse-body id="CategoriaCollapse">
                <abp-form-content />
            </abp-collapse-body>
        </abp-dynamic-form>
        <hr class="mt-2"/>
        <abp-table striped-rows="true" id="CategoriaTable" class="nowrap" />
    </abp-card-body>
</abp-card>
